

<!DOCTYPE html>
<html>
  <head>
    <link href="/assets/stylesheets/style1.css" rel="stylesheets">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
  </head>


<body>
  <div class="ui secondary pointing menu">
    <a class="item sidemenu">
      <i class="sidebar icon"></i>
    </a>

    <a class="active item" href="/">
      The Collective Home
    </a>

    <a class="item" href="/locations">
      Locations
    </a>
    <a class="item" href="/experiences">
      Experiences
    </a>

    <div class="right menu">
      <% if current_user %>
      <a class="ui item" href="<%= destroy_user_session_url %>">
        Logout
      </a>
      <% else %>
      <a class="ui item" href="/">
        Login
      </a>
      <% end %>
    </div>
  </div>

  <div class="ui bottom attached segment pushable">
    <div class="ui inverted labeled icon left inline vertical sidebar menu">
      <a class="item" href="/users/sign_in">
        <i class="home icon"></i>
        Home
      </a>
      <a class="item">
        <i class="block layout icon"></i>
        Topics
      </a>
      <a class="item">
        <i class="smile icon"></i>
        Friends
      </a>
      <a class="item">
        <i class="calendar icon"></i>
        History
      </a>
    </div>
    <div class="pusher">
      <div class="ui basic segment">

        <%= yield %>
      </div>
    </div>
  </div>



    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>


  </body>
</html>
